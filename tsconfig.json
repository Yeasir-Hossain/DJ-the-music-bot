{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "allowJs": false,
    "declaration": false,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "pretty": true,
    "lib": ["ES2020"]
  },
  "include": ["./src/**/*"]
}
